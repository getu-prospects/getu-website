---
interface Props {
  number: string;
  title: string;
  tagline: string;
  summary: string;
  image: string;
  href: string;
  category: string;
  facts: Array<{ icon: string; label: string }>;
  badge?: string;
  reversed?: boolean;
}

const { number, title, tagline, summary, image, href, category, facts, badge, reversed = false } = Astro.props;
---

<article class="group bg-cream border-b border-charcoal/10 last:border-b-0">
  <a href={href} class="block lg:grid lg:grid-cols-12 lg:gap-0">
    <!-- Image Section -->
    <div class={`relative overflow-hidden aspect-[16/10] lg:aspect-auto lg:min-h-[400px] lg:col-span-7 ${reversed ? 'lg:col-start-6 lg:order-2' : ''}`}>
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
      />

      <!-- Number badge -->
      <div class="absolute bottom-6 left-6">
        <span class="text-7xl font-display text-white/20">{number}</span>
      </div>

      <!-- Badge if new -->
      {badge && (
        <span class="absolute top-6 left-6 bg-terracotta text-white text-xs font-semibold uppercase tracking-wider px-3 py-1.5">
          {badge}
        </span>
      )}
    </div>

    <!-- Content Section -->
    <div class={`lg:col-span-5 p-8 lg:p-12 flex flex-col justify-center ${reversed ? 'lg:col-start-1 lg:order-1' : ''}`}>
      <!-- Category -->
      <span class="text-xs font-semibold uppercase tracking-wider text-terracotta mb-4">
        {category}
      </span>

      <!-- Title group -->
      <div class="mb-6">
        <h3 class="text-2xl lg:text-3xl font-display text-charcoal leading-tight mb-2 group-hover:text-terracotta transition-colors duration-300">
          {title}
        </h3>
        <p class="text-sage-dark font-medium italic">{tagline}</p>
      </div>

      <!-- Summary -->
      <p class="text-charcoal-light leading-relaxed mb-8">
        {summary}
      </p>

      <!-- Key Facts -->
      <div class="flex flex-wrap gap-4 mb-8 text-sm text-charcoal-light">
        {facts.map((fact) => (
          <div class="flex items-center gap-2">
            <span class="text-terracotta" set:html={fact.icon} />
            <span>{fact.label}</span>
          </div>
        ))}
      </div>

      <!-- CTA -->
      <div class="flex items-center gap-2 text-charcoal font-medium group-hover:text-terracotta transition-colors">
        <span>Mehr erfahren</span>
        <svg
          class="w-4 h-4 transform transition-transform duration-300 group-hover:translate-x-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </div>
    </div>
  </a>
</article>
