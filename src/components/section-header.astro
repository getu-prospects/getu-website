---
interface Props {
  title?: string;
  subTitle?: string;
  alignment?: 'center' | 'left' | 'right';
  withSuffix?: boolean;
}

const {
  title,
  subTitle,
  alignment = 'center',
  withSuffix = true,
} = Astro.props;

const alignmentClasses = {
  center: 'text-center justify-center',
  left: 'text-left justify-start',
  right: 'text-right justify-end',
};
---

<Fragment>
  {
    title && (
      <span
        class:list={[
          'flex items-center gap-2 mb-2',
          alignmentClasses[alignment],
        ]}
      >
        <h2
          class:list={[
            'text-secondary uppercase text-md font-bold',
            alignmentClasses[alignment],
          ]}
        >
          {title}
        </h2>

        {withSuffix && <div class="size-1.5 rounded-full bg-emerald-600" />}
      </span>
    )
  }
  {
    subTitle && (
      <h3
        class:list={[
          'text-2xl md:text-3xl font-bold text-emerald-950 tracking-tight',
          alignmentClasses[alignment],
        ]}
      >
        {subTitle}
      </h3>
    )
  }
</Fragment>
