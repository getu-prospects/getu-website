  .values-header.revealed {
    opacity: 1 !important;
    transform: translateY(0) !important;
  }
</style>

<script>
  function initValuesAnimation() {
    const section = document.querySelector('.values-section');

    if (!section) return;

    const header = section.querySelector('.values-header');
    const cards = section.querySelectorAll('.value-card');

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            // Animate header first
            if (header) {
              header.classList.add('revealed');
            }

            // Animate cards with staggered delay
            cards.forEach((card) => {
              const delay = parseInt(
                (card as HTMLElement).style.getPropertyValue('--card-delay') ||
                  '0',
                10
              );

              setTimeout(() => {
                card.classList.add('revealed');
              }, delay);
            });

            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.1 }
    );

    observer.observe(section);
  }

  initValuesAnimation();
  document.addEventListener('astro:page-load', initValuesAnimation);
</script>
