  .animate-marquee {
    animation: marquee 20s linear infinite;
  }

  .countdown-number {
    transition: transform 0.15s ease-in-out;
  }

  /* Animation Classes */
  .animate-fade-in {
    animation: fadeIn 1s ease-in-out;
  }

  .animate-pulse-slow {
    animation: pulseSlow 7s infinite;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes pulseSlow {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.85;
    }
  }
</style>
