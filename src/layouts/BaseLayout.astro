---
// BaseLayout.astro
import '../assets/global.css';
import GetuLogo from '../assets/images/getu-logo.png';
import AltFooter from '../components/AltFooter.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="GeTu Prospects e.V. - Interkultureller Verein in Berlin, der sich für gemeinsame Zukunft und Unterstützung Jugendlicher einsetzt."
    />
    <meta
      name="keywords"
      content="GeTu Prospects, Berlin, Interkulturell, Verein, Jugendförderung, Gemeinnützig, Youth with Perspective"
    />
    <meta name="author" content="GeTu Prospects e.V." />
    <meta name="language" content="de" />
    <meta name="robots" content="index, follow" />
    <meta name="geo.region" content="DE-BE" />
    <meta name="geo.placename" content="Berlin" />
    <title>{title} | GeTu Prospects e.V.</title>
    <link rel="icon" type="images/png" href="/getu.png" />
    <link rel="canonical" href="www.getu-prospects.de" />

    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://getu-prospects.de" />
    <meta
      property="og:title"
      content={title
        ? `${title} | GeTu Prospects e.V.`
        : 'GeTu Prospects e.V. - Interkultureller Verein in Berlin'}
    />
    <meta
      property="og:description"
      content="GeTu Prospects e.V. - Interkultureller Verein in Berlin, der sich für gemeinsame Zukunft und Unterstützung Jugendlicher einsetzt."
    />
    <meta property="og:image" content="https://getu-prospects.de/getu.png" />
    <meta property="og:locale" content="de_DE" />
    <meta property="og:site_name" content="GeTu Prospects e.V." />

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "NGO",
        "name": "GeTu Prospects e.V.",
        "url": "https://yourdomain.de",
        "logo": "https://yourdomain.de/logo.png",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Lange Enden 29",
          "addressLocality": "Berlin",
          "postalCode": "13437",
          "addressCountry": "DE"
        },
        "email": "info@getu-prospects.de",
        "telephone": "+49 1724328326"
      }
    </script>
  </head>
  <body class="font-sans text-body antialiased">
    <!-- Header - spacious and minimal -->
    <header
      class="fixed w-full top-0 left-0 z-50 transition-all duration-300 nav-background"
      id="header"
    >
      <div class="container mx-auto px-8 py-4">
        <div class="flex justify-between items-center">
          <!-- Logo -->
          <a href="/" class="relative z-10">
            <img
              src={GetuLogo.src}
              alt="GeTu Prospects e.V. Logo"
              class="h-12 md:h-20"
            />
          </a>

          <!-- Desktop Navigation -->
          <div class="hidden lg:flex items-center space-x-12">
            <nav class="flex space-x-10">
              <a
                href="/"
                class="text-white hover:text-secondary font-medium py-2 transition-colors duration-300"
                >Startseite</a
              >
              <a
                href="/ueber-uns"
                class="text-white hover:text-secondary font-medium py-2 transition-colors duration-300"
                >Über uns</a
              >
              <!-- <a
                href="/jugend"
                class="text-white hover:text-secondary font-medium py-2 transition-colors duration-300"
                >Jugend</a
              > -->
              <a
                href="/projekte"
                class="text-white hover:text-secondary font-medium py-2 transition-colors duration-300"
                >Projekte</a
              >
              <a
                href="/kontakt"
                class="text-white hover:text-secondary font-medium py-2 transition-colors duration-300"
                >Kontakt</a
              >
            </nav>
          </div>

          <!-- Mobile Menu Button -->
          <button
            id="mobileMenuButton"
            class="lg:hidden text-white relative z-10"
            aria-label="Toggle menu"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              class="w-8 h-8"
            >
              <path
                stroke-linecap="square"
                stroke-linejoin="miter"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile Navigation Overlay -->
      <div
        id="mobileMenu"
        class="fixed inset-0 bg-deepgreen bg-opacity-98 z-40 hidden flex items-center justify-center"
      >
        <nav class="text-center">
          <ul class="space-y-8">
            <li>
              <a
                href="/"
                class="text-white text-2xl font-medium hover:text-secondary block py-2 transition-colors duration-300"
                >Startseite</a
              >
            </li>
            <li>
              <a
                href="/ueber-uns"
                class="text-white text-2xl font-medium hover:text-secondary block py-2 transition-colors duration-300"
                >Über uns</a
              >
            </li>
            <li>
              <!-- <a
                href="/jugend"
                class="text-white text-2xl font-medium hover:text-secondary block py-2 transition-colors duration-300"
                >Jugend</a
              > -->
            </li>
            <li>
              <a
                href="/projekte"
                class="text-white text-2xl font-medium hover:text-secondary block py-2 transition-colors duration-300"
                >Projekte</a
              >
            </li>
            <li>
              <a
                href="/kontakt"
                class="text-white text-2xl font-medium hover:text-secondary block py-2 transition-colors duration-300"
                >Kontakt</a
              >
            </li>
          </ul>
        </nav>
      </div>
    </header>

    <!-- Main Content -->
    <main>
      <slot />
    </main>
    <AltFooter />

    <!-- Header and mobile menu script -->
    <script>
      // Header scroll behavior
      const header = document.getElementById('header')!;
      const handleScroll = () => {
        if (window.scrollY > 20) {
          header.classList.add('header-scrolled');
          header.classList.remove('nav-background');
        } else {
          header.classList.add('nav-background');
          header.classList.remove('header-scrolled');
        }
      };

      // Initial check
      handleScroll();

      // Add scroll event listener
      window.addEventListener('scroll', handleScroll);

      // Mobile menu toggle
      const mobileMenuButton = document.getElementById('mobileMenuButton');
      const mobileMenu = document.getElementById('mobileMenu');

      if (mobileMenuButton && mobileMenu) {
        mobileMenuButton.addEventListener('click', () => {
          const isOpen =
            mobileMenu.classList.contains('flex') &&
            !mobileMenu.classList.contains('hidden');

          if (isOpen) {
            mobileMenu.classList.add('hidden');
            mobileMenu.classList.remove('flex');
            mobileMenuButton.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-8 h-8">
              <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>`;
          } else {
            mobileMenu.classList.remove('hidden');
            mobileMenu.classList.add('flex');
            mobileMenuButton.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-8 h-8">
              <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>`;
          }
        });
      }
    </script>
  </body>
</html>
