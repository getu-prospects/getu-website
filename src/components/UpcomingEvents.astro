<!-- Live Countdown Script -->
<script>
  // Live Countdown Timer for Homepage with Seconds
  function updateHomeCountdown() {
    const kickoffDate = new Date('2025-06-30T15:00:00').getTime();
    const now = new Date().getTime();
    const timeLeft = kickoffDate - now;

    if (timeLeft > 0) {
      const days = Math.floor(timeLeft / (1000 * 60 * 60 * 24));
      const hours = Math.floor(
        (timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60),
      );
      const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

      const daysEl = document.getElementById('hero-days');
      const hoursEl = document.getElementById('hero-hours');
      const minutesEl = document.getElementById('hero-minutes');
      const secondsEl = document.getElementById('hero-seconds');

      // Add animation when numbers change
      function updateWithAnimation(
        element: HTMLElement | null,
        newValue: string,
      ) {
        if (element && element.textContent !== newValue) {
          element.style.transform = 'scale(1.1)';
          element.textContent = newValue;
          setTimeout(() => {
            element.style.transform = 'scale(1)';
          }, 150);
        }
      }

      if (daysEl) updateWithAnimation(daysEl, days.toString());
      if (hoursEl)
        updateWithAnimation(hoursEl, hours.toString().padStart(2, '0'));
      if (minutesEl)
        updateWithAnimation(minutesEl, minutes.toString().padStart(2, '0'));
      if (secondsEl)
        updateWithAnimation(secondsEl, seconds.toString().padStart(2, '0'));
    } else {
      const daysEl = document.getElementById('hero-days');
      const hoursEl = document.getElementById('hero-hours');
      const minutesEl = document.getElementById('hero-minutes');
      const secondsEl = document.getElementById('hero-seconds');

      if (daysEl) daysEl.textContent = '0';
      if (hoursEl) hoursEl.textContent = '00';
      if (minutesEl) minutesEl.textContent = '00';
      if (secondsEl) secondsEl.textContent = '00';
    }
  }

  // Update countdown immediately and then every second
  updateHomeCountdown();
  setInterval(updateHomeCountdown, 1000);
</script>

<!-- Custom Animations and Styles -->
<style>
  @keyframes marquee {
    0% {
      transform: translateX(100%);
