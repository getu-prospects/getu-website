---
// Hero section - Editorial magazine style with asymmetric layout
// Slideshow with Ken Burns effect
import HeroImage1 from '../../assets/images/ehrenamtstag/IMG_8725.jpg';
import HeroImage2 from '../../assets/images/stammtisch-auftakt/IMG_7935.jpg';
import HeroImage3 from '../../assets/images/nigeria-visit/IMG_8686.jpg';
import HeroImage4 from '../../assets/images/waidmannslust/IMG_7992.jpg';

const heroImages = [
  { src: HeroImage1.src, alt: 'GeTu Team mit Banner' },
  { src: HeroImage2.src, alt: 'Gemeinschaftstreffen am Tisch' },
  { src: HeroImage3.src, alt: 'Nigeria Besuch' },
  { src: HeroImage4.src, alt: 'Waidmannslust Event' },
];
---

<section class="relative min-h-screen bg-cream overflow-hidden">
  <!-- Grid layout -->
  <div class="grid lg:grid-cols-12 min-h-screen">
    <!-- Left content column -->
    <div class="lg:col-span-5 flex flex-col justify-center px-8 lg:px-16 py-20 lg:py-0 order-2 lg:order-1">
      <div class="max-w-lg">
        <!-- Issue/date marker -->
        <div class="flex items-center gap-4 mb-8 animate-fade-up">
          <div class="w-12 h-px bg-terracotta"></div>
          <span class="text-xs uppercase tracking-[0.2em] text-charcoal-light font-medium">
            Berlin • Seit 2014
          </span>
        </div>

        <!-- Main headline -->
        <h1 class="animate-fade-up delay-100">
          <span class="block text-5xl md:text-6xl lg:text-7xl font-display text-charcoal leading-[0.95]">
            Gemeinsam
          </span>
          <span class="block text-5xl md:text-6xl lg:text-7xl font-display italic text-terracotta leading-[0.95] mt-2">
            Zukunft
          </span>
          <span class="block text-5xl md:text-6xl lg:text-7xl font-display text-charcoal leading-[0.95] mt-2">
            gestalten
          </span>
        </h1>

        <!-- Subline -->
        <p class="mt-8 text-lg text-charcoal-light leading-relaxed animate-fade-up delay-200">
          Ein interkultureller Verein in Berlin, der Menschen verbindet,
          Jugendliche fordert und Brucken zwischen Kulturen baut.
        </p>

        <!-- CTAs -->
        <div class="mt-10 flex flex-wrap gap-4 animate-fade-up delay-300">
          <a href="/kontakt#volunteer" class="btn btn-primary btn-lg">
            Engagieren
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
          <a href="/ueber-uns" class="btn btn-outline btn-lg">
            Wer wir sind
          </a>
        </div>

        <!-- Quick numbers -->
        <div class="mt-16 pt-8 border-t border-charcoal/10 animate-fade-up delay-400">
          <div class="grid grid-cols-3 gap-4">
            <div>
              <span class="block text-3xl lg:text-4xl font-display text-charcoal">10+</span>
              <span class="text-xs text-charcoal-light uppercase tracking-wider">Jahre</span>
            </div>
            <div>
              <span class="block text-3xl lg:text-4xl font-display text-charcoal">500+</span>
              <span class="text-xs text-charcoal-light uppercase tracking-wider">Menschen</span>
            </div>
            <div>
              <span class="block text-3xl lg:text-4xl font-display text-charcoal">4</span>
              <span class="text-xs text-charcoal-light uppercase tracking-wider">Projekte</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Right image column - Slideshow -->
    <div class="lg:col-span-7 relative order-1 lg:order-2 min-h-[50vh] lg:min-h-screen">
      <!-- Slideshow images with Ken Burns effect -->
      {heroImages.map((image, index) => (
        <img
          src={image.src}
          alt={image.alt}
          class={`hero-slide hero-slide-${index + 1} absolute inset-0 w-full h-full object-cover`}
          loading={index === 0 ? 'eager' : 'lazy'}
        />
      ))}
      <!-- Gradient overlay for text readability -->
      <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-black/10 to-transparent z-10"></div>

      <!-- Caption -->
      <div class="absolute bottom-8 left-8 right-8 lg:bottom-12 lg:left-12 lg:right-auto lg:max-w-sm z-20">
        <div class="bg-charcoal/90 backdrop-blur-sm p-6">
          <p class="text-white/80 text-sm leading-relaxed">
            "Wir glauben an eine Gesellschaft, in der jeder Mensch
            wertgeschatzt wird."
          </p>
          <span class="block text-terracotta-light text-xs mt-3 uppercase tracking-wider">
            — GeTu Prospects e.V.
          </span>
        </div>
      </div>

      <!-- Decorative element -->
      <div class="absolute top-12 right-12 hidden lg:block z-20">
        <div class="w-20 h-20 border border-white/30"></div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-8 lg:left-16 hidden lg:flex items-center gap-3 text-charcoal-light">
    <span class="text-xs uppercase tracking-[0.2em]">Scroll</span>
    <div class="w-px h-8 bg-charcoal/30"></div>
  </div>
</section>

<style>
  /* Ken Burns crossfade slideshow - 4 images, 6 seconds each = 24 second cycle */
  .hero-slide {
    opacity: 0;
    animation: kenburns 24s infinite;
  }

  .hero-slide-1 { animation-delay: 0s; }
  .hero-slide-2 { animation-delay: 6s; }
  .hero-slide-3 { animation-delay: 12s; }
  .hero-slide-4 { animation-delay: 18s; }

  @keyframes kenburns {
    /* Fade in */
    0% {
      opacity: 0;
      transform: scale(1);
    }
    /* Fully visible, start zoom */
    4% {
      opacity: 1;
    }
    /* Stay visible, continue zoom */
    21% {
      opacity: 1;
    }
    /* Fade out */
    25% {
      opacity: 0;
      transform: scale(1.08);
    }
    /* Stay hidden for rest of cycle */
    100% {
      opacity: 0;
      transform: scale(1);
    }
  }

  /* Reduce motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .hero-slide {
      animation: crossfade 24s infinite;
    }

    @keyframes crossfade {
      0% { opacity: 0; }
      4% { opacity: 1; }
      21% { opacity: 1; }
      25% { opacity: 0; }
      100% { opacity: 0; }
    }
  }
</style>
