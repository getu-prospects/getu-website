  .dates-section.animate .timeline-item:nth-child(1) { animation: revealUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.2s forwards; opacity: 0; }
  .dates-section.animate .timeline-item:nth-child(2) { animation: revealUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.3s forwards; opacity: 0; }
  .dates-section.animate .timeline-item:nth-child(3) { animation: revealUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.4s forwards; opacity: 0; }
