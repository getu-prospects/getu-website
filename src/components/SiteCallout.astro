---
// components/SiteCallout.astro
interface Props {
  text: string;
}

const { text } = Astro.props;
---

<section class="site-callout relative bg-primary py-32 text-white overflow-hidden">
  <!-- Diagonal gradient overlay for depth -->
  <div
    class="absolute inset-0 bg-gradient-to-br from-primary via-primary to-secondary/20 z-0"
  >
  </div>

  <!-- Corner decorative brackets -->
  <div
    class="absolute top-8 left-8 w-20 h-20 border-l-2 border-t-2 border-secondary/30 hidden md:block"
  >
  </div>
  <div
    class="absolute bottom-8 right-8 w-20 h-20 border-r-2 border-b-2 border-secondary/30 hidden md:block"
  >
  </div>

  <div class="container mx-auto px-8 relative z-10">
    <div class="max-w-4xl mx-auto text-center space-y-10">
      <!-- Top divider -->
      <div class="flex justify-center callout-divider opacity-0">
        <div class="w-20 h-px bg-secondary"></div>
      </div>

      <!-- Quote with large decorative marks -->
      <div class="relative">
        <!-- Large quote mark -->
        <span
          class="absolute -top-8 left-1/2 -translate-x-1/2 text-secondary/20 text-[100px] leading-none font-serif hidden md:block"
          >"</span
        >
        <h2
          class="text-2xl md:text-3xl lg:text-4xl font-light leading-relaxed callout-text opacity-0 relative z-10"
        >
          "{text}"
        </h2>
      </div>

      <!-- Bottom divider -->
      <div class="flex justify-center callout-divider opacity-0">
        <div class="w-20 h-px bg-secondary"></div>
      </div>
    </div>
  </div>

  <!-- Subtle background grid pattern -->
  <div class="absolute inset-0 z-0 opacity-5">
    <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <pattern
          id="callout-grid"
          width="40"
          height="40"
          patternUnits="userSpaceOnUse"
        >
          <path
            d="M 0 10 L 40 10 M 10 0 L 10 40"
            stroke="white"
            stroke-width="0.5"
            fill="none"></path>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#callout-grid)"></rect>
    </svg>
  </div>
</section>

<style>
  .callout-text {
    animation: fadeUp 0.8s ease-out 0.3s forwards;
  }

  .callout-divider {
    animation: fadeUp 0.6s ease-out forwards;
  }

  .callout-divider:last-of-type {
    animation-delay: 0.5s;
  }

  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }

    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  function initCalloutAnimation() {
    const callout = document.querySelector('.site-callout');

    if (!callout) return;

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const elements = entry.target.querySelectorAll(
              '.callout-text, .callout-divider'
            );

            elements.forEach((el) => {
              el.classList.remove('opacity-0');
            });

            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.3 }
    );

    observer.observe(callout);
  }

  initCalloutAnimation();
  document.addEventListener('astro:page-load', initCalloutAnimation);
</script>
