---
interface Props {
  title: string;
  subTitle?: string;
  alignment?: 'center' | 'left' | 'right';
}

const { title, subTitle, alignment = 'center' } = Astro.props;

const alignmentClasses = {
  center: 'text-center justify-center',
  left: 'text-left justify-start',
  right: 'text-right justify-end',
};
---

<Fragment>
  <span
    class:list={['flex items-center gap-4 mb-4', alignmentClasses[alignment]]}
  >
    <h2
      class:list={[
        'text-secondary uppercase text-md font-bold',
        alignmentClasses[alignment],
      ]}
    >
      {title}
    </h2>
    <div class="size-1.5 rounded-full bg-emerald-600"></div>
  </span>
  {
    subTitle && (
      <h3
        class:list={[
          'text-2xl md:text-5xl font-bold text-emerald-950 tracking-tight',
          alignmentClasses[alignment],
        ]}
      >
        {subTitle}
      </h3>
    )
  }
</Fragment>
