---
import '../assets/styles.css';
import logo from '../assets/images/getu-logo.png';
import Cta from '../components/Cta.astro';
import { Icon } from 'astro-icon/components';

const navigation = [
  { name: 'Startseite', href: '/' },
  { name: 'Ãœber uns', href: '/leitbild' },
  { name: 'Projekte', href: '/projekte' },
];
---

<header class="border">
  <div
    class="mx-auto max-w-7xl px-4 py-4 sm:px-6 lg:px-8 flex items-center justify-between"
  >
    <a href="/">
      <img src={logo.src} alt="GeTu Logo" class="max-w-[100px]" />
    </a>
    <!-- Mobile Navigation -->
    <nav class="md:hidden relative">
      <button
        class="text-2xl text-primary"
        aria-label="Toggle Menu"
        id="menu-toggle"
      >
        <Icon name="mdi:hamburger-menu" />
      </button>
      <ul
        id="mobile-nav"
        class="hidden absolute right-0 top-full mt-2 bg-white p-4 shadow-lg rounded-lg w-48 flex flex-col gap-y-4 font-semibold"
      >
        {
          navigation.map((item) => (
            <li class="hover:text-secondary">
              <a href={item.href}>{item.name}</a>
            </li>
          ))
        }
      </ul>
    </nav>
    <!-- Desktop Navigation -->
    <nav class="hidden md:block">
      <ul class="flex gap-x-4 font-semibold md:text-lg">
        {
          navigation.map((item) => (
            <li class="hover:text-secondary">
              <a href={item.href}>{item.name}</a>
            </li>
          ))
        }
      </ul>
    </nav>
    <div class="hidden md:block">
      <Cta href="/kontakt">Mitmachen</Cta>
    </div>
  </div>
</header>
