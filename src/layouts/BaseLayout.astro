---
// BaseLayout.astro
import '../assets/global.css';
import GetuLogo from '../assets/images/getu-logo.png';
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="GeTu Prospects e.V. - Interkultureller Verein in Berlin"
    />
    <title>GeTu Prospects e.V.</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="font-sans text-body antialiased">
    <!-- Header - spacious and minimal -->
    <header
      class="fixed w-full top-0 left-0 z-50 transition-all duration-300 nav-background"
      id="header"
    >
      <div class="container mx-auto px-8 py-4">
        <div class="flex justify-between items-center">
          <!-- Logo -->
          <a href="/" class="relative z-10">
            <img
              src={GetuLogo.src}
              alt="GeTu Prospects e.V. Logo"
              class="h-12 md:h-20"
            />
          </a>

          <!-- Desktop Navigation -->
          <div class="hidden lg:flex items-center space-x-12">
            <nav class="flex space-x-10">
              <a
                href="/"
                class="text-white hover:text-secondary font-medium py-2 transition-colors duration-300"
                >Startseite</a
              >
              <a
                href="/ueber-uns"
                class="text-white hover:text-secondary font-medium py-2 transition-colors duration-300"
                >Über uns</a
              >
              <a
                href="/jugend"
                class="text-white hover:text-secondary font-medium py-2 transition-colors duration-300"
                >Jugend</a
              >
              <a
                href="/projekte"
                class="text-white hover:text-secondary font-medium py-2 transition-colors duration-300"
                >Projekte</a
              >
              <a
                href="/kontakt"
                class="text-white hover:text-secondary font-medium py-2 transition-colors duration-300"
                >Kontakt</a
              >
            </nav>
          </div>

          <!-- Mobile Menu Button -->
          <button
            id="mobileMenuButton"
            class="lg:hidden text-white relative z-10"
            aria-label="Toggle menu"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              class="w-8 h-8"
            >
              <path
                stroke-linecap="square"
                stroke-linejoin="miter"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile Navigation Overlay -->
      <div
        id="mobileMenu"
        class="fixed inset-0 bg-deepgreen bg-opacity-98 z-40 hidden flex items-center justify-center"
      >
        <nav class="text-center">
          <ul class="space-y-8">
            <li>
              <a
                href="/"
                class="text-white text-2xl font-medium hover:text-secondary block py-2 transition-colors duration-300"
                >Startseite</a
              >
            </li>
            <li>
              <a
                href="/ueber-uns"
                class="text-white text-2xl font-medium hover:text-secondary block py-2 transition-colors duration-300"
                >Über uns</a
              >
            </li>
            <li>
              <a
                href="/jugend"
                class="text-white text-2xl font-medium hover:text-secondary block py-2 transition-colors duration-300"
                >Jugend</a
              >
            </li>
            <li>
              <a
                href="/projekte"
                class="text-white text-2xl font-medium hover:text-secondary block py-2 transition-colors duration-300"
                >Projekte</a
              >
            </li>
            <li>
              <a
                href="/kontakt"
                class="text-white text-2xl font-medium hover:text-secondary block py-2 transition-colors duration-300"
                >Kontakt</a
              >
            </li>
          </ul>
        </nav>
      </div>
    </header>

    <!-- Main Content -->
    <main>
      <slot />
    </main>

    <!-- Footer - cleaner, more spaced design with muted colors -->
    <footer class="bg-deepgreen pt-20 pb-10">
      <div class="container mx-auto px-8">
        <!-- Main Footer Content -->
        <div
          class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-16 mb-20"
        >
          <!-- Contact Information -->
          <div>
            <h3 class="text-white font-bold text-xl mb-8">Kontakt</h3>
            <ul class="space-y-6">
              <li class="flex items-start">
                <div class="text-secondary mr-4 mt-1">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="square"
                      stroke-linejoin="miter"
                      stroke-width="1.5"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    ></path>
                    <path
                      stroke-linecap="square"
                      stroke-linejoin="miter"
                      stroke-width="1.5"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-white font-medium">GeTu Prospects e.V.</p>
                  <p class="text-tp-grey-2 font-light mt-1">
                    Avenue Charles de Gaulle 11, 13407 Berlin
                  </p>
                </div>
              </li>
              <li class="flex items-start">
                <div class="text-secondary mr-4 mt-1">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="square"
                      stroke-linejoin="miter"
                      stroke-width="1.5"
                      d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    ></path>
                  </svg>
                </div>
                <p class="text-tp-grey-2 font-light">info@getu-prospects.de</p>
              </li>
              <li class="flex items-start">
                <div class="text-secondary mr-4 mt-1">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="square"
                      stroke-linejoin="miter"
                      stroke-width="1.5"
                      d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                    ></path>
                  </svg>
                </div>
                <p class="text-tp-grey-2 font-light">+49 (0) 1752385285</p>
              </li>
            </ul>
          </div>

          <!-- Donation Account -->
          <div>
            <h3 class="text-white font-bold text-xl mb-8">Spendenkonto</h3>
            <ul class="space-y-6">
              <li>
                <p class="text-white font-medium">GeTu Prospects e.V.</p>
              </li>
              <li>
                <p class="text-tp-grey-2 font-light">Postbank</p>
              </li>
              <li>
                <p class="text-tp-grey-2 font-light">
                  IBAN: DE94100100100084917163
                </p>
              </li>
            </ul>
          </div>

          <!-- Quick Links -->
          <div>
            <h3 class="text-white font-bold text-xl mb-8">Links</h3>
            <ul class="space-y-4">
              <li>
                <a
                  href="/ueber-uns"
                  class="text-tp-grey-2 font-light hover:text-secondary transition-colors duration-300"
                  >Über uns</a
                >
              </li>
              <li>
                <a
                  href="/projekte"
                  class="text-tp-grey-2 font-light hover:text-secondary transition-colors duration-300"
                  >Projekte</a
                >
              </li>
              <li>
                <a
                  href="/spenden"
                  class="text-tp-grey-2 font-light hover:text-secondary transition-colors duration-300"
                  >Spenden</a
                >
              </li>
              <li>
                <a
                  href="/kontakt"
                  class="text-tp-grey-2 font-light hover:text-secondary transition-colors duration-300"
                  >Kontakt</a
                >
              </li>
            </ul>
          </div>
        </div>

        <!-- Copyright / Bottom Footer -->
        <div class="pt-8 border-t border-tp-border-1 text-sm font-light">
          <div class="flex flex-col md:flex-row justify-between items-center">
            <p class="text-tp-grey-2">© 2025 GeTu Prospects e.V.</p>
            <div class="flex mt-6 md:mt-0 space-x-8">
              <a
                href="/impressum"
                class="text-tp-grey-2 hover:text-secondary transition-colors duration-300"
                >Impressum</a
              >
              <a
                href="/datenschutz"
                class="text-tp-grey-2 hover:text-secondary transition-colors duration-300"
                >Datenschutz</a
              >
            </div>
          </div>
        </div>
      </div>
    </footer>

    <!-- Header and mobile menu script -->
    <script>
      // Header scroll behavior
      const header = document.getElementById('header')!;
      const handleScroll = () => {
        if (window.scrollY > 20) {
          header.classList.add('header-scrolled');
          header.classList.remove('nav-background');
        } else {
          header.classList.add('nav-background');
          header.classList.remove('header-scrolled');
        }
      };

      // Initial check
      handleScroll();

      // Add scroll event listener
      window.addEventListener('scroll', handleScroll);

      // Mobile menu toggle
      const mobileMenuButton = document.getElementById('mobileMenuButton');
      const mobileMenu = document.getElementById('mobileMenu');

      if (mobileMenuButton && mobileMenu) {
        mobileMenuButton.addEventListener('click', () => {
          const isOpen =
            mobileMenu.classList.contains('flex') &&
            !mobileMenu.classList.contains('hidden');

          if (isOpen) {
            mobileMenu.classList.add('hidden');
            mobileMenu.classList.remove('flex');
            mobileMenuButton.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-8 h-8">
              <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>`;
          } else {
            mobileMenu.classList.remove('hidden');
            mobileMenu.classList.add('flex');
            mobileMenuButton.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-8 h-8">
              <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>`;
          }
        });
      }
    </script>
  </body>
</html>
