---
// Projects section - Clean horizontal card grid
const projects = [
  {
    number: '01',
    title: 'Youth with Perspective',
    tagline: 'Finde deinen Weg',
    description: 'Ein Programm fur junge Menschen, die gemeinsam Antworten auf die grossen Fragen des Lebens suchen.',
    image: 'https://images.unsplash.com/photo-1529390079861-591f8a33b1e1?w=800&q=80',
    href: '/projekte/youth',
    schedule: 'Jeden 3. Samstag',
  },
  {
    number: '02',
    title: 'Mentoring-Programm',
    tagline: 'Gemeinsam ankommen',
    description: 'Wir verbinden Neuankommlinge mit erfahrenen Mentor*innen fur den Start in Deutschland.',
    image: 'https://images.unsplash.com/photo-1529156069898-49953e39b3ac?w=800&q=80',
    href: '/projekte/mentoring',
    schedule: 'Seit Oktober 2025',
    isNew: true,
  },
  {
    number: '03',
    title: 'Stammtisch gegen Einsamkeit',
    tagline: 'Ein offener Treffpunkt',
    description: 'Ein Raum fur Begegnung und echte Gesprache - offen fur alle Altersgruppen.',
    image: 'https://images.unsplash.com/photo-1529070538774-1843cb3265df?w=800&q=80',
    href: '/projekte/stammtisch',
    schedule: 'Jeden 3. Freitag',
  },
  {
    number: '04',
    title: 'Weihnachtsaktion',
    tagline: 'Hoffnung schenken',
    description: 'Seit 2016 schenken wir obdachlosen Menschen in Berlin Unterstutzung und Warme.',
    image: 'https://images.unsplash.com/photo-1532629345422-7515f3d16bb6?w=800&q=80',
    href: '/projekte/weihnachtsaktion',
    schedule: 'Jahrlich im Dezember',
  },
];
---

<section class="py-24 lg:py-32 bg-cream">
  <div class="container-wide">
    <!-- Section header -->
    <div class="grid lg:grid-cols-12 gap-8 mb-16">
      <div class="lg:col-span-5 reveal">
        <span class="label-sm text-terracotta mb-4 block">Unsere Arbeit</span>
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-display text-charcoal leading-[1.05]">
          Vier Wege,<br/>
          <span class="italic text-sage-dark">Veranderung</span><br/>
          zu schaffen
        </h2>
      </div>
      <div class="lg:col-span-6 lg:col-start-7 flex items-end reveal" style="animation-delay: 100ms">
        <p class="text-xl text-charcoal-light leading-relaxed">
          Durch gezielte Programme und personliche Begleitung unterstutzen wir
          Menschen auf ihrem Weg zu einem selbstbestimmten Leben.
        </p>
      </div>
    </div>

    <!-- Projects grid -->
    <div class="grid md:grid-cols-2 gap-px bg-charcoal/10">
      {projects.map((project, index) => (
        <a
          href={project.href}
          class="group block bg-cream reveal"
          style={`animation-delay: ${(index + 1) * 100}ms`}
        >
          <div class="relative">
            <!-- Image -->
            <div class="aspect-[16/10] overflow-hidden">
              <img
                src={project.image}
                alt={project.title}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
              />
              {project.isNew && (
                <span class="absolute top-4 left-4 bg-terracotta text-white px-3 py-1 text-xs font-semibold uppercase tracking-wider">
                  Neu
                </span>
              )}
            </div>

            <!-- Content -->
            <div class="p-8 lg:p-10">
              <div class="flex items-center justify-between mb-4">
                <span class="text-4xl font-display text-charcoal/10">{project.number}</span>
                <span class="text-xs uppercase tracking-wider text-charcoal-light">{project.schedule}</span>
              </div>

              <h3 class="text-2xl lg:text-3xl font-display text-charcoal mb-2 group-hover:text-terracotta transition-colors">
                {project.title}
              </h3>
              <p class="text-terracotta font-medium mb-4">{project.tagline}</p>
              <p class="text-charcoal-light leading-relaxed mb-6">{project.description}</p>

              <span class="inline-flex items-center gap-2 text-charcoal font-medium text-sm group-hover:text-terracotta transition-colors">
                Mehr erfahren
                <svg class="w-4 h-4 transition-transform group-hover:translate-x-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </span>
            </div>
          </div>
        </a>
      ))}
    </div>

    <!-- View all -->
    <div class="flex justify-center mt-16 reveal">
      <a href="/projekte" class="btn btn-secondary btn-lg">
        Alle Projekte entdecken
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </div>
  </div>
</section>
