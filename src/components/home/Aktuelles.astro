---
// Aktuelles - Interactive news section
// Click any item to make it featured
import EhrenamtstagImage from '../../assets/images/ehrenamtstag/IMG_8725.jpg';
import MentoringAuftaktImage from '../../assets/images/mentorship-auftakt/IMG_8705.jpg';
import NigeriaVisitImage from '../../assets/images/nigeria-visit/IMG_8683.jpg';
import WaidmannslustImage from '../../assets/images/waidmannslust/IMG_7979.jpg';

const highlights = [
  {
    type: 'Veranstaltung',
    title: 'GeTu Prospects auf der Reinickendorfer Freiwilligenbörse',
    excerpt: 'Am 11. Oktober 2025 präsentierten wir unseren Verein auf der Reinickendorfer Freiwilligenbörse im Fontane Haus.',
    date: '11. Oktober 2025',
    image: EhrenamtstagImage.src,
    href: '/aktuelles/freiwilligenboerse',
  },
  {
    type: 'Mentoring',
    title: 'Auftakt des Mentoring-Programms 2025',
    excerpt: 'Am Tag der Deutschen Einheit starteten wir in die neue Runde unseres Mentoring-Programms.',
    date: '3. Oktober 2025',
    image: MentoringAuftaktImage.src,
    href: '/aktuelles/mentoring-auftakt',
  },
  {
    type: 'Internationaler Austausch',
    title: 'Besuch von Studierenden aus Nigeria',
    excerpt: 'Junge Studierende aus Nigeria besuchten uns während ihrer Bildungsexkursion.',
    date: '12. September 2025',
    image: NigeriaVisitImage.src,
    href: '/aktuelles/nigeria-besuch',
  },
  {
    type: 'Nachbarschaftsfest',
    title: 'GeTu Prospects beim Jubiläum 150 Jahre Waidmannslust',
    excerpt: 'Am 20. Juli 2025 feierte der Ortsteil Waidmannslust sein 150-jähriges Bestehen.',
    date: '20. Juli 2025',
    image: WaidmannslustImage.src,
    href: '/aktuelles/waidmannslust-150',
  },
];
---

<section class="section-padding bg-white border-y border-charcoal/10" data-aktuelles>
  <div class="container-wide">
    <!-- Section header - newspaper style -->
    <div class="flex items-end justify-between border-b-2 border-charcoal pb-4 mb-12 reveal">
      <div>
        <span class="label-sm text-terracotta mb-2 block">Was passiert</span>
        <h2 class="text-4xl md:text-5xl font-display text-charcoal">Aktuelles</h2>
      </div>
      <span class="text-xs text-charcoal-light uppercase tracking-wider hidden md:block">
        Neuigkeiten & Highlights
      </span>
    </div>

    <!-- News grid - asymmetric layout -->
    <div class="grid lg:grid-cols-12 gap-8 lg:gap-12">
      <!-- Featured item - large -->
      <div class="lg:col-span-7 reveal">
        {highlights.map((item, index) => (
          <div
            class:list={["featured-item", index === 0 ? "active" : ""]}
            data-featured={index}
          >
            <a href={item.href} class="group block">
              <div class="relative aspect-[16/10] overflow-hidden mb-6">
                <img
                  src={item.image}
                  alt={item.title}
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                />
                <div class="absolute top-0 left-0 bg-terracotta text-white px-4 py-2 text-xs font-semibold uppercase tracking-wider">
                  {item.type}
                </div>
              </div>
              <div class="flex items-center gap-4 mb-3">
                <span class="text-xs text-charcoal-light uppercase tracking-wider">{item.date}</span>
                <div class="flex-1 h-px bg-charcoal/10"></div>
              </div>
              <h3 class="text-2xl md:text-3xl font-display text-charcoal mb-4 group-hover:text-terracotta transition-colors">
                {item.title}
              </h3>
              <p class="text-charcoal-light leading-relaxed mb-4">
                {item.excerpt}
              </p>
              <span class="inline-flex items-center gap-2 text-terracotta font-medium text-sm">
                Mehr lesen
                <svg class="w-4 h-4 transition-transform group-hover:translate-x-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </span>
            </a>
          </div>
        ))}
      </div>

      <!-- Other items - stacked list -->
      <div class="lg:col-span-5">
        <div class="divide-y divide-charcoal/10">
          {highlights.map((item, index) => (
            <button
              type="button"
              class:list={[
                "news-item group w-full text-left py-6 first:pt-0 transition-all cursor-pointer",
                index === 0 ? "active" : ""
              ]}
              data-item={index}
            >
              <div class="flex items-start justify-between gap-4">
                <div class="flex-1">
                  <div class="flex items-center gap-3 mb-2">
                    <span class="news-badge bg-sand text-charcoal px-2 py-0.5 text-xs font-semibold uppercase tracking-wider transition-colors">
                      {item.type}
                    </span>
                    <span class="text-xs text-charcoal-light">{item.date}</span>
                  </div>
                  <h4 class="text-lg font-display text-charcoal mb-2 group-hover:text-terracotta transition-colors">
                    {item.title}
                  </h4>
                  <p class="text-sm text-charcoal-light line-clamp-2">
                    {item.excerpt}
                  </p>
                </div>
                <div class="news-indicator w-2 h-2 rounded-full border border-charcoal/20 flex-shrink-0 mt-2 transition-all"></div>
              </div>
            </button>
          ))}
        </div>

        <!-- Newsletter signup mini -->
        <div class="mt-8 pt-8 border-t border-charcoal/10 reveal" style="animation-delay: 500ms">
          <div class="bg-charcoal p-6">
            <h4 class="font-display text-lg text-white mb-2">Auf dem Laufenden bleiben</h4>
            <p class="text-white/60 text-sm mb-4">Folgen Sie uns auf Social Media fur Updates.</p>
            <div class="flex gap-3">
              <a href="https://www.instagram.com/getuprospects/" target="_blank" rel="noopener" class="w-10 h-10 border border-white/20 flex items-center justify-center text-white/60 hover:text-white hover:border-terracotta hover:bg-terracotta transition-all">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              </a>
              <a href="https://www.facebook.com/getuprospects" target="_blank" rel="noopener" class="w-10 h-10 border border-white/20 flex items-center justify-center text-white/60 hover:text-white hover:border-terracotta hover:bg-terracotta transition-all">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .featured-item {
    display: none;
  }

  .featured-item.active {
    display: block;
    animation: fadeIn 0.4s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Ensure all news items are always visible */
  .news-item {
    opacity: 1 !important;
    display: block !important;
  }

  .news-item.active {
    background: linear-gradient(to right, transparent, rgba(232, 93, 59, 0.08));
  }

  .news-item.active .news-indicator {
    background-color: #e85d3b;
    border-color: #e85d3b;
  }

  .news-item.active .news-badge {
    background-color: #e85d3b;
    color: white;
  }

  .news-item:hover:not(.active) {
    background: linear-gradient(to right, transparent, rgba(0, 0, 0, 0.02));
  }
</style>

<script>
  function initAktuelles() {
    const section = document.querySelector('[data-aktuelles]');

    if (!section) return;

    const items = section.querySelectorAll('.news-item');
    const featured = section.querySelectorAll('.featured-item');

    function setActive(index: number) {
      items.forEach((item, i) => {
        item.classList.toggle('active', i === index);
      });

      featured.forEach((f, i) => {
        f.classList.toggle('active', i === index);
      });
    }

    items.forEach((item, index) => {
      item.addEventListener('click', () => {
        setActive(index);
      });
    });
  }

  initAktuelles();
  document.addEventListener('astro:page-load', initAktuelles);
</script>
