---
// index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import VisionCallout from '../components/VisionCallout.astro';
import CallToAction from '../components/CallToAction.astro';
---

<BaseLayout>
  <!-- Hero Section with background image -->
  <section class="relative min-h-screen flex items-center">
    <!-- Background image with overlay -->
    <div class="absolute inset-0 z-0">
      <img
        src="https://images.unsplash.com/photo-1529156069898-49953e39b3ac?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2072&q=80"
        alt="Diverse group of people"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-deepgreen bg-opacity-85"></div>
    </div>
    <div class="container mx-auto px-8 py-40 md:py-0 relative z-20">
      <div class="max-w-2xl text-white space-y-8 animate-fade-in">
        <div class="space-y-2">
          <h6 class="text-secondary font-bold tracking-wider text-lg">
            GETU PROSPECTS E.V.
          </h6>
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold">
            Vielfalt leben
          </h1>
          <h2 class="text-3xl md:text-4xl font-medium pt-2">Träume stärken</h2>
        </div>
        <p class="text-xl font-light leading-relaxed tracking-wide mt-8 mb-12">
          Als Interkultureller Verein verbinden wir Kulturen und begleiten
          Familien und junge Menschen dabei, neue Perspektiven im Leben zu
          schaffen.
        </p>
        <div class="flex flex-col sm:flex-row gap-6 pt-4">
          <a
            href="/unsere-vision"
            class="bg-white text-primary py-4 px-10 text-center font-medium transition-all hover:bg-opacity-90 inline-block"
            >Unsere Vision</a
          >
          <a
            href="/mitmachen"
            class="bg-secondary text-white py-4 px-10 text-center font-medium transition-all hover:bg-opacity-90 inline-block"
            >Mitmachen</a
          >
        </div>
      </div>
    </div>
  </section>

  <!-- About Section with mission statement - Introducing the organization first -->
  <section class="py-32">
    <div class="container mx-auto px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-20 items-center">
        <div class="order-2 md:order-1 animate-fade-in-left">
          <img
            src="https://images.unsplash.com/photo-1579208570378-8c970854bc23?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1974&q=80"
            alt="Hands holding a paper family - support concept"
            class="w-full"
          />
        </div>
        <div class="order-1 md:order-2 animate-fade-in-right">
          <div class="space-y-8">
            <h6 class="text-secondary font-semibold tracking-wider text-lg">
              ÜBER UNS
            </h6>
            <h2 class="text-3xl md:text-4xl font-bold text-primary">
              Herz für Menschen.
            </h2>
            <div class="space-y-6 font-light leading-relaxed text-body">
              <p>
                GeTu Prospects e.V. ist eine christliche Non-Profit-Organisation
                mit Sitz in Berlin, die sich der Unterstützung von Menschen
                aller Kulturen und Hintergründe widmet.
              </p>
              <p>
                Geprägt von Professionalität und christlichen Werten wie
                Nächstenliebe und Respekt, glauben wir daran, dass jeder Mensch
                einzigartig ist und Chancen, Mitgefühl sowie eine unterstützende
                Gemeinschaft verdient, um zu wachsen und sein Potenzial zu
                entfalten.
              </p>
            </div>
            <div class="pt-4">
              <p class="font-medium text-primary">Unsere Mission:</p>
              <p class="font-light leading-relaxed text-body pt-2">
                Geprägt von beruflicher Exzellenz und christlichen Werten setzen
                wir uns dafür ein, Menschen aller Kulturen und Nationen zu
                stärken, zu fördern und positiv zu verändern.
              </p>
            </div>
            <a
              href="/ueber-uns"
              class="group inline-flex items-center text-secondary font-medium mt-8"
            >
              Lernen Sie uns kennen
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 ml-2 transform transition-transform duration-300 group-hover:translate-x-1"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                  clip-rule="evenodd"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section - Now comes after intro -->
  <section class="bg-tp-grey-1 py-32">
    <div class="container mx-auto px-8">
      <h2 class="text-3xl md:text-4xl font-bold text-primary text-center mb-24">
        Vielfältige Unterstützung für jede Lebenslage
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
        <!-- Service 1 -->
        <div
          class="bg-white p-12 transition-transform hover:-translate-y-2 duration-300"
        >
          <div class="mb-10 overflow-hidden">
            <img
              src="https://images.unsplash.com/photo-1551516594-56cb78394645?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1216&q=80"
              alt="Unterstützung bei der Elternschaft"
              class="w-full h-64 object-cover transform transition-transform hover:scale-105 duration-700"
            />
          </div>
          <h3 class="text-2xl font-bold text-primary mb-6">
            Unterstützung bei der Elternschaft
          </h3>
          <p class="text-body font-light mb-8 leading-relaxed">
            Wir bieten praxisnahe Anleitungen, Workshops und Ressourcen, die
            Eltern dabei helfen, ihre Erziehungsfähigkeiten zu stärken und
            gesunde Beziehungen zu ihren Kindern aufzubauen.
          </p>
          <a
            href="/elternschaft"
            class="group inline-flex items-center text-secondary font-medium"
          >
            Mehr erfahren
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 ml-2 transform transition-transform duration-300 group-hover:translate-x-1"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                clip-rule="evenodd"></path>
            </svg>
          </a>
        </div>

        <!-- Service 2 -->
        <div
          class="bg-white p-12 transition-transform hover:-translate-y-2 duration-300"
        >
          <div class="mb-10 overflow-hidden">
            <img
              src="https://images.unsplash.com/photo-1536809188428-e8ecf663d0be?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80"
              alt="Familienberatung"
              class="w-full h-64 object-cover transform transition-transform hover:scale-105 duration-700"
            />
          </div>
          <h3 class="text-2xl font-bold text-primary mb-6">Familienberatung</h3>
          <p class="text-body font-light mb-8 leading-relaxed">
            Unser Team bietet vertrauliche und einfühlsame Beratungen an, um
            familiäre Bindungen zu stärken, Konflikte zu lösen und eine gesunde
            Kommunikation innerhalb der Familie zu fördern.
          </p>
          <a
            href="/familienberatung"
            class="group inline-flex items-center text-secondary font-medium"
          >
            Mehr erfahren
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 ml-2 transform transition-transform duration-300 group-hover:translate-x-1"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                clip-rule="evenodd"></path>
            </svg>
          </a>
        </div>

        <!-- Service 3 -->
        <div
          class="bg-white p-12 transition-transform hover:-translate-y-2 duration-300"
        >
          <div class="mb-10 overflow-hidden">
            <img
              src="https://images.unsplash.com/photo-1532629345422-7515f3d16bb6?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80"
              alt="Empowerment-Programme"
              class="w-full h-64 object-cover transform transition-transform hover:scale-105 duration-700"
            />
          </div>
          <h3 class="text-2xl font-bold text-primary mb-6">
            Empowerment-Programme
          </h3>
          <p class="text-body font-light mb-8 leading-relaxed">
            Unsere Programme bieten gezielte Unterstützung, um
            Selbstbewusstsein, Resilienz und Führungsqualitäten zu entwickeln -
            besonders für Jugendliche vor wichtigen Lebensentscheidungen.
          </p>
          <a
            href="/empowerment"
            class="group inline-flex items-center text-secondary font-medium"
          >
            Mehr erfahren
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 ml-2 transform transition-transform duration-300 group-hover:translate-x-1"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                clip-rule="evenodd"></path>
            </svg>
          </a>
        </div>
      </div>

      <div class="text-center mt-16">
        <a
          href="/dienstleistungen"
          class="inline-block bg-secondary text-white py-4 px-10 font-medium transition-all hover:bg-opacity-90"
        >
          Alle Dienstleistungen ansehen
        </a>
      </div>
    </div>
  </section>

  <!-- Vision Statement - using the component -->
  <VisionCallout
    text="Wir träumen von einer Gesellschaft, in der jeder Mensch wertgeschätzt, unterstützt und befähigt wird, sein volles Potenzial zu entfalten."
  />

    <!-- Current Project Highlight Section -->
    <section class="py-32">
      <div class="container mx-auto px-8">
        <div class="max-w-3xl mx-auto text-center mb-20">
          <h6 class="text-secondary font-bold tracking-wider text-lg">
            LAUFENDE PROJEKTE
          </h6>
          <h2 class="text-3xl md:text-4xl font-bold text-primary mt-4">
            Youth with Perspective
          </h2>
          <p class="text-xl font-light leading-relaxed text-body mt-6">
            Finde deinen Weg, Entfalte dein Potenzial
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-16 items-center">
          <div>
            <img
              src="https://images.unsplash.com/photo-1523240795612-9a054b0db644?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80"
              alt="Youth with Perspective - Young people in a discussion"
              class="w-full"
            />
          </div>
          <div class="space-y-6 font-light leading-relaxed text-body">
            <p>
              Das Leben kann herausfordernd sein, besonders wenn man als junger
              Mensch keinen klaren Weg vor Augen hat. Youth with Perspective
              schafft einen inspirierenden Raum, in dem Jugendliche gemeinsam ihre
              Zukunft gestalten können.
            </p>
            <p>
              Mehr als nur ein Treffpunkt bietet dieses Programm eine
              unterstützende Gemeinschaft, in der junge Menschen zusammenkommen,
              um wichtige Lebensfragen zu erkunden, Perspektiven zu teilen und
              sich gegenseitig auf ihrem Weg zu bestärken.
            </p>

            <div class="mt-6">
              <p class="font-medium text-primary">
                Was Youth with Perspective bietet:
              </p>
              <ul class="mt-4 space-y-3">
                <li class="flex items-start">
                  <span class="text-secondary mr-3 mt-1">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-5 w-5"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 13l4 4L19 7"></path>
                    </svg>
                  </span>
                  <span>Identitätsentwicklung und Selbstfindung</span>
                </li>
                <li class="flex items-start">
                  <span class="text-secondary mr-3 mt-1">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-5 w-5"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 13l4 4L19 7"></path>
                    </svg>
                  </span>
                  <span>Orientierung in wichtigen Lebensfragen</span>
                </li>
                <li class="flex items-start">
                  <span class="text-secondary mr-3 mt-1">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-5 w-5"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 13l4 4L19 7"></path>
                    </svg>
                  </span>
                  <span>Aufbau einer unterstützenden Gemeinschaft</span>
                </li>
              </ul>
            </div>

            <a
              href="/projekte/youth-with-perspective"
              class="group inline-flex items-center text-secondary font-medium mt-8"
            >
              Mehr über das Projekt erfahren
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 ml-2 transform transition-transform duration-300 group-hover:translate-x-1"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                  clip-rule="evenodd"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>

  <!-- CTA Section using the component -->
  <CallToAction
    title="Engagieren Sie sich als Freiwilliger für eine gemeinsame, strahlende Zukunft!"
    buttonText="JETZT BEWERBEN"
    buttonLink="/jetzt-bewerben"
  />

  <!-- Add global animation styles -->
  <style>
    /* Animation Classes */
    .animate-fade-in {
      animation: fadeIn 1s ease-in-out;
    }

    .animate-fade-in-left {
      animation: fadeInLeft 1.2s ease-out;
    }

    .animate-fade-in-right {
      animation: fadeInRight 1.2s ease-out;
    }

    .animate-pulse-slow {
      animation: pulseSlow 7s infinite;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }

    @keyframes fadeInLeft {
      from {
        opacity: 0;
        transform: translateX(-50px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    @keyframes fadeInRight {
      from {
        opacity: 0;
        transform: translateX(50px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    @keyframes pulseSlow {
      0%,
      100% {
        opacity: 1;
      }
      50% {
        opacity: 0.85;
      }
    }
  </style>
</BaseLayout>
