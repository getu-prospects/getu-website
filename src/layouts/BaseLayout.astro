---
// BaseLayout.astro
import '../assets/global.css';
import NavEditorial from '../components/NavEditorial.astro';
import AltFooter from '../components/AltFooter.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="GeTu Prospects e.V. - Interkultureller Verein in Berlin, der sich für gemeinsame Zukunft und Unterstützung Jugendlicher einsetzt."
    />
    <meta
      name="keywords"
      content="GeTu Prospects, Berlin, Interkulturell, Verein, Jugendförderung, Gemeinnützig, Youth with Perspective"
    />
    <meta name="author" content="GeTu Prospects e.V." />
    <meta name="language" content="de" />
    <meta name="robots" content="index, follow" />
    <meta name="geo.region" content="DE-BE" />
    <meta name="geo.placename" content="Berlin" />
    <title>{title} | GeTu Prospects e.V.</title>
    <link rel="icon" type="images/png" href="/getu.png" />
    <link rel="canonical" href="https://getu-prospects.de" />

    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://getu-prospects.de" />
    <meta
      property="og:title"
      content={title
        ? `${title} | GeTu Prospects e.V.`
        : 'GeTu Prospects e.V. - Interkultureller Verein in Berlin'}
    />
    <meta
      property="og:description"
      content="GeTu Prospects e.V. - Interkultureller Verein in Berlin, der sich für gemeinsame Zukunft und Unterstützung Jugendlicher einsetzt."
    />
    <meta property="og:image" content="https://getu-prospects.de/getu.png" />
    <meta property="og:locale" content="de_DE" />
    <meta property="og:site_name" content="GeTu Prospects e.V." />
    <script
      is:inline
      defer
      data-domain="getu-prospects.de"
      src="https://plausible.io/js/script.js"></script>
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "NGO",
        "name": "GeTu Prospects e.V.",
        "url": "https://getu-prospects.de",
        "logo": "https://getu-prospects.de/logo.png",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Lange Enden 29",
          "addressLocality": "Berlin",
          "postalCode": "13437",
          "addressCountry": "DE"
        },
        "email": "info@getu-prospects.de",
        "telephone": "+49 1724328326"
      }
    </script>
  </head>
  <body class="font-sans text-body antialiased">
    <!-- Editorial Navigation -->
    <NavEditorial />

    <!-- Main Content -->
    <main>
      <slot />
    </main>

    <AltFooter />

    <!-- Back to top button -->
    <button
      id="backToTop"
      class="back-to-top"
      aria-label="Nach oben scrollen"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        class="w-6 h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
      </svg>
    </button>

    <!-- Back to top script -->
    <script>
      function initBackToTop() {
        const backToTop = document.getElementById('backToTop');

        if (!backToTop) return;

        const handleScroll = () => {
          if (window.scrollY > 500) {
            backToTop.classList.add('visible');
          } else {
            backToTop.classList.remove('visible');
          }
        };

        window.addEventListener('scroll', handleScroll);
        handleScroll();

        backToTop.addEventListener('click', () => {
          window.scrollTo({ top: 0, behavior: 'smooth' });
        });
      }

      initBackToTop();
      document.addEventListener('astro:page-load', initBackToTop);
    </script>
  </body>
</html>
