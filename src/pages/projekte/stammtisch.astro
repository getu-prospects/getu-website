---
import BaseLayout from '../../layouts/BaseLayout.astro';
import StammtischPhoto from '../../assets/images/projects/einsamkeit.jpg';
import EinsamkeitLogo from '../../assets/images/projects/einsamkeit-logo.png';
---

<BaseLayout title="Stammtisch gegen Einsamkeit - GeTu Prospects e.V.">
  <!-- Hero Section - Editorial Split Layout -->
  <section class="stammtisch-hero relative min-h-[75vh] lg:min-h-[85vh] overflow-hidden bg-charcoal">
    <!-- Background image with cinematic overlay -->
    <div class="absolute inset-0">
      <img
        src={StammtischPhoto.src}
        alt="Stammtisch gegen Einsamkeit - Gemeinschaft"
        class="w-full h-full object-cover opacity-40 scale-105 animate-ken-burns"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-charcoal via-charcoal/60 to-transparent"></div>
      <div class="absolute inset-0 bg-gradient-to-r from-charcoal/80 to-transparent"></div>
    </div>

    <!-- Decorative elements -->
    <div class="absolute top-1/4 right-0 w-px h-48 bg-terracotta/30 hidden lg:block"></div>
    <div class="absolute bottom-1/3 left-12 w-32 h-px bg-terracotta/30 hidden lg:block"></div>
    <div class="absolute top-32 right-24 w-20 h-20 border border-terracotta/20 hidden xl:block animate-float"></div>

    <!-- Content -->
    <div class="relative z-10 container mx-auto px-8 md:px-16 h-full flex items-end pb-20 lg:pb-28">
      <div class="max-w-4xl">
        <!-- Label -->
        <div class="hero-label opacity-0 flex items-center gap-4 mb-6">
          <span class="text-6xl lg:text-8xl font-display font-bold text-white/15">02</span>
          <span class="label-editorial text-terracotta tracking-[0.3em]">
            Gemeinschaftsprojekt
          </span>
        </div>

        <!-- Main headline -->
        <h1 class="hero-headline opacity-0">
          <span class="headline-large text-white block">Stammtisch gegen</span>
          <span class="headline-large text-terracotta block mt-2">Einsamkeit</span>
        </h1>

        <!-- Accent line -->
        <div class="hero-line mt-8 w-24 h-1 bg-terracotta scale-x-0 origin-left"></div>

        <!-- Tagline -->
        <p class="hero-tagline opacity-0 mt-8 text-xl md:text-2xl text-white/80 font-light max-w-2xl leading-relaxed">
          Ein offener Treffpunkt für alle, die Gesellschaft suchen und
          neue Verbindungen knüpfen möchten.
        </p>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-3 hero-scroll opacity-0">
      <span class="text-xs uppercase tracking-[0.3em] text-white/40">Entdecken</span>
      <div class="w-px h-10 bg-white/20 relative overflow-hidden">
        <div class="absolute top-0 left-0 w-full h-4 bg-terracotta animate-scroll-line"></div>
      </div>
    </div>
  </section>

  <!-- Quick Facts Bar - Bold Accent -->
  <section class="bg-terracotta py-8">
    <div class="container mx-auto px-8 md:px-16">
      <div class="flex flex-wrap justify-center lg:justify-between gap-6 lg:gap-8 text-white">
        <div class="flex items-center gap-3 group">
          <div class="w-10 h-10 border border-white/30 flex items-center justify-center group-hover:bg-white/10 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
          <span class="font-medium">Jeden 3. Freitag</span>
        </div>
        <div class="flex items-center gap-3 group">
          <div class="w-10 h-10 border border-white/30 flex items-center justify-center group-hover:bg-white/10 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <span class="font-medium">15:00 - 18:00 Uhr</span>
        </div>
        <div class="flex items-center gap-3 group">
          <div class="w-10 h-10 border border-white/30 flex items-center justify-center group-hover:bg-white/10 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>
          <span class="font-medium">Alte Fasanerie Lübars</span>
        </div>
        <div class="flex items-center gap-3 group">
          <div class="w-10 h-10 border border-white/30 flex items-center justify-center group-hover:bg-white/10 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <span class="font-medium">Kostenfrei</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <article class="py-24 lg:py-32 bg-cream">
    <div class="container mx-auto px-8 md:px-16">

      <!-- Introduction - Editorial Drop Cap -->
      <div class="intro-section max-w-3xl mx-auto mb-24 opacity-0">
        <p class="text-xl lg:text-2xl text-charcoal leading-relaxed first-letter:text-6xl first-letter:font-display first-letter:font-semibold first-letter:text-terracotta first-letter:float-left first-letter:mr-4 first-letter:mt-2">
          Einsamkeit betrifft Menschen aller Altersgruppen und ist eine
          der größten Herausforderungen unserer Gesellschaft. Mit unserem
          "Stammtisch gegen Einsamkeit" schaffen wir jeden dritten Freitag
          im Monat einen Raum für Begegnung und Austausch.
        </p>
        <p class="mt-8 text-lg text-charcoal-light leading-relaxed">
          In gemütlicher Atmosphäre bei kostenfreiem Kaffee und Kuchen
          können Menschen zusammenkommen, Gespräche führen und neue
          Kontakte knüpfen.
        </p>
      </div>

      <!-- Two-Column Layout: Info + Partner - Asymmetric -->
      <section class="details-section mb-24 opacity-0">
        <div class="grid lg:grid-cols-12 gap-8 lg:gap-0">
          <!-- Event Details -->
          <div class="lg:col-span-6 bg-white p-10 lg:p-14 relative">
            <!-- Accent corner -->
            <div class="absolute top-0 left-0 w-16 h-1 bg-terracotta"></div>
            <div class="absolute top-0 left-0 w-1 h-16 bg-terracotta"></div>

            <span class="label-editorial text-terracotta tracking-[0.2em]">Details</span>
            <h2 class="mt-4 text-2xl md:text-3xl font-display font-semibold text-charcoal">
              Veranstaltungs&shy;informationen
            </h2>

            <div class="mt-10 space-y-8">
              <div class="flex gap-5">
                <div class="flex-shrink-0 w-14 h-14 bg-sand flex items-center justify-center">
                  <svg class="w-6 h-6 text-terracotta" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-charcoal">Wann</h3>
                  <p class="mt-1 text-charcoal-light">Jeden dritten Freitag im Monat</p>
                  <p class="mt-2 text-2xl font-display font-semibold text-terracotta">15:00 - 18:00 Uhr</p>
                </div>
              </div>

              <div class="flex gap-5">
                <div class="flex-shrink-0 w-14 h-14 bg-sand flex items-center justify-center">
                  <svg class="w-6 h-6 text-terracotta" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-charcoal">Wo</h3>
                  <p class="mt-1 text-lg font-medium text-charcoal">Alte Fasanerie Lübars</p>
                  <p class="text-charcoal-light">Fasanerie 10<br/>13469 Berlin</p>
                </div>
              </div>

              <div class="flex gap-5">
                <div class="flex-shrink-0 w-14 h-14 bg-sand flex items-center justify-center">
                  <svg class="w-6 h-6 text-terracotta" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-charcoal">Kosten</h3>
                  <p class="mt-1 text-lg font-semibold text-terracotta">Komplett kostenfrei!</p>
                  <p class="text-charcoal-light">Kaffee und Kuchen inklusive</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Partner Info - Offset for asymmetry -->
          <div class="lg:col-span-6 lg:mt-12 bg-charcoal p-10 lg:p-14 text-white relative">
            <!-- Decorative element -->
            <div class="absolute -top-4 -right-4 w-8 h-8 bg-terracotta hidden lg:block"></div>

            <span class="label-editorial text-terracotta tracking-[0.2em]">Kooperation</span>
            <h2 class="mt-4 text-2xl md:text-3xl font-display font-semibold">
              In Zusammenarbeit mit
            </h2>

            <img
              src={EinsamkeitLogo.src}
              alt="Bezirksamt Reinickendorf"
              class="h-16 mt-8 mb-8"
            />

            <p class="text-white/80 leading-relaxed">
              Der Stammtisch gegen Einsamkeit ist ein Gemeinschaftsprojekt
              mit dem Bezirksamt Reinickendorf, das sich aktiv für die
              Bekämpfung von Einsamkeit in unserer Gesellschaft einsetzt.
            </p>
            <p class="mt-6 text-white/80 leading-relaxed">
              Gemeinsam schaffen wir Räume, in denen Menschen zusammenkommen
              und soziale Verbindungen aufbauen können.
            </p>
          </div>
        </div>
      </section>

      <!-- What We Offer - Magazine Grid with Numbers -->
      <section class="offer-section mb-24 opacity-0">
        <div class="grid lg:grid-cols-12 gap-8 lg:gap-16 mb-16">
          <div class="lg:col-span-5">
            <span class="label-editorial text-terracotta tracking-[0.3em]">
              Unser Angebot
            </span>
            <h2 class="mt-4 text-3xl md:text-4xl font-display font-semibold text-charcoal leading-[1.05]">
              Was wir<br/>
              <span class="italic text-sage-dark">bieten</span>
            </h2>
          </div>
        </div>

        <div class="grid md:grid-cols-2 gap-px bg-charcoal/10">
          <div class="offer-card bg-cream p-10 group" style="--offer-delay: 0ms">
            <div class="flex items-start gap-6">
              <span class="text-5xl font-display font-bold text-charcoal/10 group-hover:text-terracotta/20 transition-colors">01</span>
              <div>
                <h3 class="text-xl font-display font-semibold text-charcoal mb-3 group-hover:text-terracotta transition-colors">Regelmäßige Treffen</h3>
                <p class="text-charcoal-light leading-relaxed">Jeden dritten Freitag im Monat von 15:00 bis 18:00 Uhr</p>
              </div>
            </div>
          </div>

          <div class="offer-card bg-cream p-10 group" style="--offer-delay: 100ms">
            <div class="flex items-start gap-6">
              <span class="text-5xl font-display font-bold text-charcoal/10 group-hover:text-terracotta/20 transition-colors">02</span>
              <div>
                <h3 class="text-xl font-display font-semibold text-charcoal mb-3 group-hover:text-terracotta transition-colors">Gemütliche Atmosphäre</h3>
                <p class="text-charcoal-light leading-relaxed">In den schönen Räumlichkeiten der Alten Fasanerie Lübars</p>
              </div>
            </div>
          </div>

          <div class="offer-card bg-cream p-10 group" style="--offer-delay: 200ms">
            <div class="flex items-start gap-6">
              <span class="text-5xl font-display font-bold text-charcoal/10 group-hover:text-terracotta/20 transition-colors">03</span>
              <div>
                <h3 class="text-xl font-display font-semibold text-charcoal mb-3 group-hover:text-terracotta transition-colors">Kostenfreie Bewirtung</h3>
                <p class="text-charcoal-light leading-relaxed">Kaffee und Kuchen werden kostenfrei angeboten</p>
              </div>
            </div>
          </div>

          <div class="offer-card bg-cream p-10 group" style="--offer-delay: 300ms">
            <div class="flex items-start gap-6">
              <span class="text-5xl font-display font-bold text-charcoal/10 group-hover:text-terracotta/20 transition-colors">04</span>
              <div>
                <h3 class="text-xl font-display font-semibold text-charcoal mb-3 group-hover:text-terracotta transition-colors">Offene Gemeinschaft</h3>
                <p class="text-charcoal-light leading-relaxed">Alle sind willkommen - keine Anmeldung erforderlich</p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- For Whom - Full-Width Break -->
      <section class="audience-section mb-24 -mx-8 md:-mx-16 px-8 md:px-16 py-20 lg:py-24 bg-sand relative overflow-hidden opacity-0">
        <!-- Decorative elements -->
        <div class="absolute top-12 right-12 w-32 h-32 border border-terracotta/10 hidden lg:block"></div>
        <div class="absolute bottom-12 left-12 w-24 h-24 border border-charcoal/5 hidden lg:block"></div>

        <div class="relative z-10">
          <div class="grid lg:grid-cols-12 gap-8 lg:gap-16 mb-16">
            <div class="lg:col-span-5">
              <span class="label-editorial text-terracotta tracking-[0.3em]">
                Zielgruppe
              </span>
              <h2 class="mt-4 text-3xl md:text-4xl font-display font-semibold text-charcoal leading-[1.05]">
                Für wen ist der<br/>
                <span class="italic text-sage-dark">Stammtisch?</span>
              </h2>
            </div>
            <div class="lg:col-span-7 lg:pt-8">
              <p class="text-lg text-charcoal-light leading-relaxed">
                Unser Stammtisch richtet sich an alle Menschen, die Gesellschaft
                suchen - ob jung oder alt, neu in Berlin oder alteingesessen.
              </p>
            </div>
          </div>

          <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 max-w-4xl mx-auto">
            <div class="audience-card bg-white p-6 text-center group hover:bg-charcoal transition-colors duration-300">
              <svg class="w-10 h-10 mx-auto text-terracotta group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
              <span class="block mt-4 font-medium text-charcoal group-hover:text-white transition-colors">Ältere Menschen</span>
            </div>
            <div class="audience-card bg-white p-6 text-center group hover:bg-charcoal transition-colors duration-300">
              <svg class="w-10 h-10 mx-auto text-terracotta group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
              </svg>
              <span class="block mt-4 font-medium text-charcoal group-hover:text-white transition-colors">Alleinlebende</span>
            </div>
            <div class="audience-card bg-white p-6 text-center group hover:bg-charcoal transition-colors duration-300">
              <svg class="w-10 h-10 mx-auto text-terracotta group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <span class="block mt-4 font-medium text-charcoal group-hover:text-white transition-colors">Zugezogene</span>
            </div>
            <div class="audience-card bg-white p-6 text-center group hover:bg-charcoal transition-colors duration-300">
              <svg class="w-10 h-10 mx-auto text-terracotta group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
              </svg>
              <span class="block mt-4 font-medium text-charcoal group-hover:text-white transition-colors">Isolierte Personen</span>
            </div>
          </div>
        </div>
      </section>

      <!-- Map Section -->
      <section class="map-section mb-24 opacity-0">
        <div class="grid lg:grid-cols-12 gap-8 lg:gap-16 mb-12">
          <div class="lg:col-span-5">
            <span class="label-editorial text-terracotta tracking-[0.3em]">
              Standort
            </span>
            <h2 class="mt-4 text-3xl md:text-4xl font-display font-semibold text-charcoal leading-[1.05]">
              So finden Sie<br/>
              <span class="italic text-sage-dark">uns</span>
            </h2>
          </div>
        </div>

        <div class="max-w-5xl mx-auto overflow-hidden border border-charcoal/10">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m28!1m12!1m3!1d19385.67019173491!2d13.33094693124337!3d52.60199707802289!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!4m13!3e3!4m5!1s0x47a85377f316370f%3A0x7a15e91b0557aa7e!2sS%2BU%20Wittenau%2C%2013435%20Berlin!3m2!1d52.59579!2d13.336139999999999!4m5!1s0x47a85316d9a1c939%3A0xe73a8370797068be!2sAlte%20Fasanerie%20L%C3%BCbars%2C%20Fasanerie%2010%2C%2013469%20Berlin!3m2!1d52.607872199999996!2d13.3678832!5e0!3m2!1sen!2sde!4v1752342759880!5m2!1sen!2sde"
            width="100%"
            height="450"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Karte zur Alten Fasanerie Lübars"
            class="w-full grayscale hover:grayscale-0 transition-all duration-700"
          >
          </iframe>
        </div>
      </section>

      <!-- Upcoming Dates - Editorial Calendar Layout -->
      <section class="dates-section mb-24 opacity-0">
        <div class="grid lg:grid-cols-12 gap-8 lg:gap-16 mb-12">
          <div class="lg:col-span-5">
            <span class="label-editorial text-terracotta tracking-[0.3em]">Kalender</span>
            <h2 class="mt-4 text-3xl md:text-4xl font-display font-semibold text-charcoal leading-[1.05]">
              Nächste<br/>
              <span class="italic text-sage-dark">Termine</span>
            </h2>
          </div>
        </div>

        <div class="grid lg:grid-cols-12 gap-0">
          <!-- Featured Next Date -->
          <div class="lg:col-span-5 bg-charcoal p-10 lg:p-14 relative overflow-hidden group">
            <!-- Decorative corner -->
            <div class="absolute top-0 right-0 w-32 h-32 bg-terracotta/10"></div>
            <div class="absolute bottom-0 left-0 w-24 h-24 border border-white/5"></div>

            <div class="relative z-10">
              <span class="inline-block px-3 py-1 bg-terracotta text-white text-xs font-semibold uppercase tracking-wider mb-6">
                Nächster Termin
              </span>

              <div class="flex items-baseline gap-4 mb-4">
                <span class="text-8xl lg:text-9xl font-display font-bold text-white leading-none">17</span>
                <div>
                  <span class="block text-2xl font-display text-terracotta">Oktober</span>
                  <span class="block text-white/50 text-lg">2025</span>
                </div>
              </div>

              <div class="mt-8 pt-6 border-t border-white/10">
                <div class="flex items-center gap-3 text-white/80 mb-3">
                  <svg class="w-5 h-5 text-terracotta" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  <span>15:00 - 18:00 Uhr</span>
                </div>
                <div class="flex items-center gap-3 text-white/80">
                  <svg class="w-5 h-5 text-terracotta" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  <span>Alte Fasanerie Lübars</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Timeline of Future Dates -->
          <div class="lg:col-span-7 bg-white p-8 lg:p-12 flex flex-col justify-center">
            <div class="mb-6">
              <span class="text-xs font-semibold uppercase tracking-wider text-charcoal-light/60">Weitere Termine</span>
            </div>

            <!-- Timeline -->
            <div class="relative">
              <!-- Timeline line -->
              <div class="absolute left-[11px] top-0 bottom-0 w-px bg-gradient-to-b from-terracotta via-charcoal/20 to-charcoal/5"></div>

