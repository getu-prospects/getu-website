---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Impressum - GeTu Prospects e.V.">
  <!-- Editorial Hero - Compact for legal pages -->
  <section class="legal-hero relative bg-charcoal overflow-hidden">
    <!-- Decorative elements -->
    <div class="absolute top-0 right-0 w-px h-full bg-white/5"></div>
    <div class="absolute bottom-0 left-0 w-1/3 h-px bg-white/5"></div>

    <div class="container mx-auto px-8 md:px-16 pt-32 pb-16 lg:pt-40 lg:pb-20">
      <div class="max-w-4xl">
        <!-- Label -->
        <div class="hero-label opacity-0 flex items-center gap-4 mb-6">
          <div class="w-12 h-px bg-terracotta"></div>
          <span class="text-terracotta text-sm font-semibold uppercase tracking-[0.3em]">
            Rechtliches
          </span>
        </div>

        <!-- Main headline -->
        <h1 class="hero-headline opacity-0 text-4xl md:text-5xl lg:text-6xl font-display font-bold text-white leading-[0.95]">
          Impressum
        </h1>

        <!-- Subtitle -->
        <p class="hero-tagline opacity-0 mt-6 text-lg text-white/60 max-w-xl">
          Angaben gemaß § 5 TMG
        </p>
      </div>
    </div>
  </section>

  <!-- Content Section -->
  <section class="py-16 lg:py-24 bg-cream">
    <div class="container mx-auto px-8 md:px-16">
      <div class="max-w-3xl">
        <!-- Organization Info -->
        <div class="mb-16">
          <div class="flex items-start gap-6 mb-6">
            <span class="text-5xl font-display font-bold text-charcoal/10">01</span>
            <div>
              <h2 class="text-xl font-display font-semibold text-charcoal">Angaben gemaß § 5 TMG</h2>
            </div>
          </div>
          <div class="pl-16 lg:pl-20">
            <address class="text-charcoal/80 not-italic leading-relaxed">
              GeTu Prospects e.V.<br/>
              Lange Enden 29<br/>
              13437 Berlin
            </address>
          </div>
        </div>

        <!-- Representatives -->
        <div class="mb-16">
          <div class="flex items-start gap-6 mb-6">
            <span class="text-5xl font-display font-bold text-charcoal/10">02</span>
            <div>
              <h2 class="text-xl font-display font-semibold text-charcoal">Vertreten durch</h2>
            </div>
          </div>
          <div class="pl-16 lg:pl-20">
            <p class="text-charcoal/80 leading-relaxed">
              Paul Adenmosun<br/>
              Grace Adenmosun
            </p>
          </div>
        </div>

        <!-- Contact -->
        <div class="mb-16">
          <div class="flex items-start gap-6 mb-6">
            <span class="text-5xl font-display font-bold text-charcoal/10">03</span>
            <div>
              <h2 class="text-xl font-display font-semibold text-charcoal">Kontakt</h2>
            </div>
          </div>
          <div class="pl-16 lg:pl-20 space-y-2">
            <p class="text-charcoal/80">
              <span class="text-xs uppercase tracking-wider text-charcoal/50 block mb-1">Telefon</span>
              <a href="tel:+491724328326" class="hover:text-terracotta transition-colors">+49 172 432 8326</a>
            </p>
            <p class="text-charcoal/80">
              <span class="text-xs uppercase tracking-wider text-charcoal/50 block mb-1">E-Mail</span>
              <a href="mailto:info@getu-prospects.de" class="hover:text-terracotta transition-colors">info@getu-prospects.de</a>
            </p>
          </div>
        </div>

        <!-- Registry -->
        <div class="mb-16">
          <div class="flex items-start gap-6 mb-6">
            <span class="text-5xl font-display font-bold text-charcoal/10">04</span>
            <div>
              <h2 class="text-xl font-display font-semibold text-charcoal">Registereintrag</h2>
            </div>
          </div>
          <div class="pl-16 lg:pl-20">
            <p class="text-charcoal/80 leading-relaxed">
              Eintragung im Vereinsregister.<br/>
              Registergericht: Amtsgericht Berlin-Charlottenburg<br/>
              Registernummer: VR 37009 B
            </p>
          </div>
        </div>

        <!-- Responsible -->
        <div class="mb-16">
          <div class="flex items-start gap-6 mb-6">
            <span class="text-5xl font-display font-bold text-charcoal/10">05</span>
            <div>
              <h2 class="text-xl font-display font-semibold text-charcoal">Verantwortlich fur den Inhalt nach § 55 Abs. 2 RStV</h2>
            </div>
          </div>
          <div class="pl-16 lg:pl-20">
            <address class="text-charcoal/80 not-italic leading-relaxed">
              Oladayo Fagbemi<br/>
              GeTu Prospects e.V.<br/>
              Lange Enden 29<br/>
              13437 Berlin
            </address>
          </div>
        </div>

        <!-- Download -->
        <div class="mb-16">
          <div class="flex items-start gap-6 mb-6">
            <span class="text-5xl font-display font-bold text-charcoal/10">06</span>
            <div>
              <h2 class="text-xl font-display font-semibold text-charcoal">Dokumente</h2>
            </div>
          </div>
          <div class="pl-16 lg:pl-20">
            <a
              href="/getu_satzung.pdf"
              class="group inline-flex items-center gap-4 border border-charcoal/20 px-6 py-4 hover:border-terracotta hover:bg-terracotta/5 transition-all"
            >
              <svg class="w-5 h-5 text-terracotta" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              <div>
                <span class="block text-charcoal group-hover:text-terracotta transition-colors">Auszug aus der Vereinsatzung</span>
                <span class="text-xs text-charcoal/50">PDF, 8,1 MB</span>
              </div>
            </a>
          </div>
        </div>

        <!-- Image Credits -->
        <div>
          <div class="flex items-start gap-6 mb-6">
            <span class="text-5xl font-display font-bold text-charcoal/10">07</span>
            <div>
              <h2 class="text-xl font-display font-semibold text-charcoal">Bildnachweis</h2>
            </div>
          </div>
          <div class="pl-16 lg:pl-20">
            <ul class="space-y-3 text-charcoal/70 text-sm">
              <li>
                <em>Two Person holding heart</em> von
                <a href="https://unsplash.com/@kellysikkema" target="_blank" rel="noopener" class="text-charcoal hover:text-terracotta transition-colors">Kelly Sikkema</a>
                uber
                <a href="https://unsplash.com" target="_blank" rel="noopener" class="text-charcoal hover:text-terracotta transition-colors">Unsplash</a>
              </li>
              <li>
                Foto von
                <a href="https://unsplash.com/@grievek1610begur" target="_blank" rel="noopener" class="text-charcoal hover:text-terracotta transition-colors">Kevin Grieve</a>
                uber
                <a href="https://unsplash.com" target="_blank" rel="noopener" class="text-charcoal hover:text-terracotta transition-colors">Unsplash</a>
              </li>
              <li>
                <em>People holding shoulders sitting on wall</em> von
                <a href="https://unsplash.com/@miinyuii" target="_blank" rel="noopener" class="text-charcoal hover:text-terracotta transition-colors">Duy Pham</a>
                uber
                <a href="https://unsplash.com" target="_blank" rel="noopener" class="text-charcoal hover:text-terracotta transition-colors">Unsplash</a>
              </li>
              <li>
                <em>Four Person holding each others waist at daytime</em> von
                <a href="https://unsplash.com/@voneciacarswell" target="_blank" rel="noopener" class="text-charcoal hover:text-terracotta transition-colors">Vonecia Carswell</a>
                uber
                <a href="https://unsplash.com" target="_blank" rel="noopener" class="text-charcoal hover:text-terracotta transition-colors">Unsplash</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Back to top / Related links -->
  <section class="py-12 bg-charcoal">
    <div class="container mx-auto px-8 md:px-16">
      <div class="flex flex-col md:flex-row justify-between items-center gap-6">
        <a href="/datenschutz" class="text-white/60 hover:text-white transition-colors flex items-center gap-3">
          <span>Datenschutzerklarung</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
        <a href="#" class="text-white/40 hover:text-white/60 transition-colors text-sm flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"/>
          </svg>
          Nach oben
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero animations */
  .legal-hero .hero-label {
    animation: slideInLeft 1s cubic-bezier(0.16, 1, 0.3, 1) 0.2s forwards;
  }

  .legal-hero .hero-headline {
    animation: revealUp 1.2s cubic-bezier(0.16, 1, 0.3, 1) 0.4s forwards;
  }

  .legal-hero .hero-tagline {
    animation: revealUp 1s cubic-bezier(0.16, 1, 0.3, 1) 0.6s forwards;
  }

  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes revealUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

</style>
