        </p>
      </div>
    </div>

    <!-- Decorative curve at the bottom right -->
    <div
      class="absolute bottom-0 right-0 w-64 h-64 bg-[#F89880] rounded-full opacity-30 transform translate-x-1/3 translate-y-1/3"
    >
    </div>
  </div>
  <EngagementCallout />
  <Footer />
</SiteLayout>
