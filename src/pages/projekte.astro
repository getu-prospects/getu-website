---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import StammtischMeeting from '../assets/images/stammtisch/meeting-01.jpg';
import ChristmasPhoto from '../assets/images/christmas/getu-ausgabe-1.jpeg';
import YouthPhoto from '../assets/images/youth/IMG_7606.jpg';
import MentoringPhoto from '../assets/images/mentorship-auftakt/IMG_8706.jpg';
---

<BaseLayout title="Projekte">
  <!-- Hero Section - Editorial style -->
  <section class="relative bg-cream pt-32 pb-20 lg:pt-40 lg:pb-28">
    <div class="container-wide">
      <div class="grid lg:grid-cols-12 gap-8 lg:gap-16">
        <!-- Left: Title -->
        <div class="lg:col-span-5 reveal">
          <span class="label-sm text-terracotta mb-4 block">Unsere Arbeit</span>
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-display text-charcoal leading-[0.95]">
            Gemeinsam<br/>
            <span class="italic text-sage-dark">Veränderung</span><br/>
            bewirken
          </h1>
        </div>

        <!-- Right: Description + Stats -->
        <div class="lg:col-span-6 lg:col-start-7 flex flex-col justify-end reveal" style="animation-delay: 100ms">
          <p class="text-xl text-charcoal-light leading-relaxed mb-12">
            Durch gezielte Programme und Initiativen schaffen wir nachhaltige
            positive Veränderungen in unserer Gemeinschaft. Jedes Projekt hat
            seine eigene Geschichte - entdecken Sie sie.
          </p>

          <!-- Impact stats -->
          <div class="grid grid-cols-3 gap-8 pt-8 border-t border-charcoal/10">
            <div>
              <span class="block text-4xl lg:text-5xl font-display text-charcoal">4</span>
              <span class="text-sm text-charcoal-light">Aktive Projekte</span>
            </div>
            <div>
              <span class="block text-4xl lg:text-5xl font-display text-charcoal">150+</span>
              <span class="text-sm text-charcoal-light">Menschen erreicht</span>
            </div>
            <div>
              <span class="block text-4xl lg:text-5xl font-display text-charcoal">8+</span>
              <span class="text-sm text-charcoal-light">Jahre Erfahrung</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Projects List -->
  <section class="bg-cream pb-24 lg:pb-32">
    <div class="container-wide">
      <!-- Project Cards -->
      <div class="border-t border-charcoal/10">
        <!-- Project 1: Mentoring -->
        <div class="reveal">
          <ProjectCard
            number="01"
            title="Mentoring-Programm"
            tagline="Gemeinsam ankommen, gemeinsam wachsen"
            summary="Unser Mentoring-Programm verbindet Neuankommlinge mit erfahrenen Mentor*innen, die ihnen helfen, in Deutschland Fuss zu fassen und sich heimisch zu fuhlen."
            image={MentoringPhoto.src}
            href="/projekte/mentoring"
            category="Neues Programm"
            badge="Neu"
            facts={[
              { icon: '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>', label: 'Seit Oktober 2025' },
              { icon: '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/></svg>', label: '100% Kostenlos' }
            ]}
          />
        </div>

        <!-- Project 2: Stammtisch -->
        <div class="reveal" style="animation-delay: 100ms">
          <ProjectCard
            number="02"
            title="Stammtisch gegen Einsamkeit"
            tagline="Ein offener Treffpunkt fur alle"
            summary="Einsamkeit betrifft Menschen aller Altersgruppen. Mit unserem Stammtisch schaffen wir jeden dritten Freitag im Monat einen Raum fur Begegnung."
            image={StammtischMeeting.src}
            href="/projekte/stammtisch"
            category="Gemeinschaft"
            reversed={true}
            facts={[
              { icon: '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>', label: 'Jeden 3. Freitag' },
              { icon: '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>', label: '15:00 - 18:00 Uhr' }
            ]}
          />
        </div>

        <!-- Project 3: Weihnachtsaktion -->
        <div class="reveal" style="animation-delay: 200ms">
          <ProjectCard
            number="03"
            title="Weihnachtsaktion"
            tagline="Hoffnung fur Berlins Obdachlose"
            summary="Seit 2016 organisieren wir jedes Jahr eine Weihnachtsausgabe-Aktion in Berlin, um obdachlosen Menschen Unterstutzung und Weihnachtsfreude zu schenken."
            image={ChristmasPhoto.src}
            href="/projekte/weihnachtsaktion"
            category="Jahrliche Aktion"
            facts={[
              { icon: '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>', label: 'Seit 2016' },
              { icon: '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7"/></svg>', label: '150+ Menschen' }
            ]}
          />
        </div>

        <!-- Project 4: Youth -->
        <div class="reveal" style="animation-delay: 300ms">
          <ProjectCard
            number="04"
            title="Youth with Perspective"
            tagline="Finde deinen Weg, entfalte dein Potenzial"
            summary="Ein Raum fur junge Menschen, die gemeinsam Antworten auf die grossen Fragen des Lebens suchen: Identität, Lebenssinn und Potenzialentfaltung."
            image={YouthPhoto.src}
            href="/projekte/youth"
            category="Jugendprogramm"
            reversed={true}
            facts={[
              { icon: '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>', label: 'Jeden 3. Samstag' },
              { icon: '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>', label: '16:00 - 17:30 Uhr' }
            ]}
          />
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 lg:py-32 bg-charcoal relative overflow-hidden">
    <!-- Decorative elements -->
    <div class="absolute inset-0">
      <div class="absolute top-0 left-0 w-48 h-48 border border-white/5"></div>
      <div class="absolute bottom-0 right-0 w-64 h-64 border border-white/5"></div>
    </div>

    <div class="container-wide relative">
      <div class="grid lg:grid-cols-12 gap-8 items-center">
        <div class="lg:col-span-7 reveal">
          <span class="label-sm text-terracotta mb-4 block">Mitmachen</span>
          <h2 class="text-4xl md:text-5xl lg:text-6xl font-display text-white leading-[1.05] mb-6">
            Werde Teil unserer<br/>
            <span class="italic text-terracotta-light">Gemeinschaft</span>
          </h2>
          <p class="text-xl text-white/70 leading-relaxed">
            Ob als Freiwilliger, Mentor*in oder Unterstutzer - es gibt viele Wege,
            bei GeTu Prospects e.V. mitzuwirken.
          </p>
        </div>

        <div class="lg:col-span-4 lg:col-start-9 reveal" style="animation-delay: 100ms">
          <div class="flex flex-col gap-4">
            <a href="/kontakt#volunteer" class="btn btn-primary btn-lg justify-center">
              Freiwillig engagieren
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
            <a href="/kontakt" class="btn bg-white/10 text-white hover:bg-white/20 btn-lg justify-center">
              Kontakt aufnehmen
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
